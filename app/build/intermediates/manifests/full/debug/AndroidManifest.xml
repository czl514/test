<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.crazyit.activityjump"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.crazyit.activityjump.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.crazyit.activityjump.NextActivity"
            android:label="第二个Activity"
            android:launchMode="singleTask"
            android:screenOrientation="nosensor"
            android:theme="@style/Theme" >
        </activity>
        <activity
            android:name="org.crazyit.activityjump.NextNextActivity"
            android:label="第三个Activity"
            android:screenOrientation="nosensor"
            android:theme="@style/Theme" >
        </activity>
    </application>

</manifest>